<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.upatek.accelerometer_test.AccelerometerPhoneActivity" >

    <Button
        android:id="@+id/btnStartRotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotation Vector Activity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Mode(X, Y axis):" />

    <Button
        android:id="@+id/btnStartPhoneMouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Mouse(Phone)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glass Mode(Z, X axis):" />

    <Button
        android:id="@+id/btnStartGlassMouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Mouse (Glass)" />

<!--     <Button -->
